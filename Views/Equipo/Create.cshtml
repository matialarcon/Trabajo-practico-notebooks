@model NotebookApp.Models.Equipo

@{
    ViewData["Title"] = "Nuevo Equipo";
}

<h2 class="mb-4">Registrar Nuevo Equipo</h2>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-danger">
        @ViewBag.Mensaje
    </div>
}

<div class="card shadow p-4 mb-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="NumeroInventario" class="form-label fw-bold">N° Inventario</label>
            <input asp-for="NumeroInventario" class="form-control" />
            <span asp-validation-for="NumeroInventario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Marca" class="form-label fw-bold"></label>
            <input asp-for="Marca" class="form-control" />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Modelo" class="form-label fw-bold"></label>
            <input asp-for="Modelo" class="form-control" />
            <span asp-validation-for="Modelo" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-start gap-2 mt-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-danger">Volver</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

