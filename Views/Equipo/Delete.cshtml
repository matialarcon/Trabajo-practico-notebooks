@model NotebookApp.Models.Equipo

@{
    ViewData["Title"] = "Eliminar Equipo";
}

<h2 class="mb-4">Eliminar Equipo</h2>

<div class="card shadow p-4 mb-4">
    <h5 class="text-danger fw-bold">¿Seguro que deseas eliminar este equipo?</h5>
    <hr />

    <dl class="row mb-4">
        <dt class="col-sm-3 fw-bold">N° Inventario</dt>
        <dd class="col-sm-9">@Model.NumeroInventario</dd>

        <dt class="col-sm-3 fw-bold">Marca</dt>
        <dd class="col-sm-9">@Model.Marca</dd>

        <dt class="col-sm-3 fw-bold">Modelo</dt>
        <dd class="col-sm-9">@Model.Modelo</dd>

        <dt class="col-sm-3 fw-bold">Disponibilidad</dt>
        <dd class="col-sm-9">
            @if (Model.Disponibilidad)
            {
                <span class="text-success fw-bold">Disponible</span>
            }
            else
            {
                <span class="text-danger fw-bold">Prestado</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EquipoId" />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>

