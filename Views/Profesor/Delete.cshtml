@model NotebookApp.Models.Profesor

@{
    ViewData["Title"] = "Eliminar Profesor";
}

<h2 class="mb-4">Eliminar Profesor</h2>

<div class="card shadow p-4 mb-4">
    <h5 class="text-danger fw-bold">¿Seguro que deseas eliminar este profesor?</h5>
    <hr />

    <dl class="row mb-4">
        <dt class="col-sm-3 fw-bold">DNI</dt>
        <dd class="col-sm-9">@Model.Dni</dd>

        <dt class="col-sm-3 fw-bold">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3 fw-bold">Apellido</dt>
        <dd class="col-sm-9">@Model.Apellido</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProfesorId" />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
