@model IEnumerable<NotebookApp.Models.Profesor>

@{
    ViewData["Title"] = "Listado de Profesores";
    var permitirEliminar = (Dictionary<int, bool>)ViewBag.PermitirEliminar;
}

<h2>Listado de Profesores</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nuevo Profesor</a>
</p>

<table class="table table-bordered table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>DNI</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th style="width: 150px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Dni</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>

                <td class="text-center">
                    <div class="d-flex justify-content-center gap-1">

                        <a asp-action="Edit"
                           asp-route-id="@item.ProfesorId"
                           class="btn btn-primary btn-sm">
                            Editar
                        </a>

                        @if (!permitirEliminar[item.ProfesorId])
                        {
                            <a asp-action="Delete"
                               asp-route-id="@item.ProfesorId"
                               class="btn btn-danger btn-sm">
                                Eliminar
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
